{
  "include": ["src"],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "disableReferencedProjectLoad": false,
    "disableSourceOfProjectReferenceRedirect": false,
    "paths": {
      "vite": ["../vite/src/node/index.js"]
    }
  }
}
